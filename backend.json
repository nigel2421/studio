
{
  "entities": {
    "userProfile": {
      "title": "User Profile",
      "description": "Stores user account details and roles.",
      "type": "object",
      "properties": {
        "email": { "type": "string" },
        "role": { 
          "type": "string", 
          "enum": ["admin", "agent", "tenant", "landlord", "viewer", "water-meter-reader", "investment-consultant", "accounts", "homeowner"] 
        },
        "name": { "type": "string" },
        "tenantId": { "type": "string" },
        "propertyId": { "type": "string" },
        "landlordId": { "type": "string" },
        "propertyOwnerId": { "type": "string" }
      },
      "required": ["email", "role"]
    },
    "maintenanceRequest": {
      "title": "Maintenance Request",
      "description": "A request for maintenance submitted by a tenant.",
      "type": "object",
      "properties": {
        "propertyId": {
          "type": "string",
          "description": "The ID of the property."
        },
        "tenantId": {
          "type": "string",
          "description": "The ID of the tenant who submitted the request."
        },
        "title": {
          "type": "string",
          "description": "A brief title for the maintenance issue."
        },
        "description": {
          "type": "string",
          "description": "A detailed description of the maintenance issue."
        },
        "category": {
          "type": "string",
          "description": "The category of the maintenance request.",
          "enum": ["Plumbing", "Electrical", "HVAC", "General", "Appliance", "Other"]
        },
        "priority": {
          "type": "string",
          "description": "The priority level of the request.",
          "enum": ["Low", "Medium", "High", "Urgent"]
        },
        "status": {
          "type": "string",
          "description": "The current status of the request.",
          "enum": ["New", "In Progress", "Completed", "Cancelled"]
        },
        "date": {
          "type": "string",
          "format": "date-time",
          "description": "The date the request was submitted."
        },
        "createdAt": {
            "type": "string",
            "format": "date-time"
        },
        "updatedAt": {
            "type": "string",
            "format": "date-time"
        },
        "completedAt": {
            "type": "string",
            "format": "date-time"
        },
        "updates": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "message": { "type": "string" },
              "authorName": { "type": "string" },
              "date": { "type": "string", "format": "date-time" }
            }
          }
        }
      },
      "required": ["propertyId", "tenantId", "title", "description", "category", "priority", "status", "date", "createdAt", "updatedAt"]
    },
    "noticeToVacate": {
      "title": "Notice to Vacate",
      "description": "A notice submitted by a tenant or admin to terminate a lease.",
      "type": "object",
      "properties": {
        "tenantId": { "type": "string" },
        "propertyId": { "type": "string" },
        "unitName": { "type": "string" },
        "tenantName": { "type": "string" },
        "propertyName": { "type": "string" },
        "noticeSubmissionDate": { "type": "string", "format": "date-time" },
        "scheduledMoveOutDate": { "type": "string", "format": "date" },
        "submittedBy": { "type": "string", "enum": ["Admin", "Tenant"] },
        "submittedByName": { "type": "string" },
        "status": { "type": "string", "enum": ["Active", "Completed"] },
        "reason": { "type": "string", "description": "The reason the tenant is vacating." }
      },
      "required": ["tenantId", "propertyId", "unitName", "tenantName", "propertyName", "noticeSubmissionDate", "scheduledMoveOutDate", "submittedBy", "status"]
    }
  },
  "auth": {
    "providers": []
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/userProfile"
      },
      "description": "Stores all user profiles."
    },
    "/maintenanceRequests/{maintenanceRequestId}": {
      "schema": {
        "$ref": "#/entities/maintenanceRequest"
      },
      "description": "Stores all maintenance requests from tenants."
    },
    "/noticesToVacate/{noticeId}": {
      "schema": {
        "$ref": "#/entities/noticeToVacate"
      },
      "description": "Stores all active and completed notices to vacate."
    }
  }
}
