
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read their own profile
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    // Tenant-specific data
    match /tenants/{tenantId} {
      allow read, write: if request.auth.uid != null; // Admin/Agent access
    }
    
    match /archived_tenants/{tenantId} {
        allow read, write: if request.auth.uid != null;
    }

    match /maintenanceRequests/{requestId} {
        allow read: if request.auth.uid != null;
        allow create: if request.auth.uid != null; // Allow any authenticated user to create
        allow update: if request.auth.uid != null; // Admin/Agent can update status
    }

    match /waterReadings/{readingId} {
        allow read, write: if request.auth.uid != null;
    }

    match /payments/{paymentId} {
        allow read, write: if request.auth.uid != null;
    }

    // Admin-only access to logs
    match /logs/{logId} {
      allow read, write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
  }
}
