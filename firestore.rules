
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    function isAgent() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'agent';
    }

    function isTenantOwner(tenantId) {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.tenantId == tenantId;
    }
    
    function isSelf(userId) {
        return request.auth.uid == userId;
    }

    match /users/{userId} {
      allow read, write: if isAdmin() || isSelf(userId);
    }

    match /tenants/{tenantId} {
      allow read: if isAdmin() || isAgent() || isTenantOwner(tenantId);
      allow write: if isAdmin() || isAgent();
    }
    match /archived_tenants/{tenantId} {
      allow read: if isAdmin() || isAgent();
      allow write: if isAdmin() || isAgent();
    }

    match /maintenanceRequests/{requestId} {
      allow read: if isAdmin() || isAgent() || isTenantOwner(resource.data.tenantId);
      allow create: if isTenantOwner(request.resource.data.tenantId);
      allow update: if isAdmin() || isAgent();
      allow delete: if isAdmin();
    }

    match /waterReadings/{readingId} {
      allow read: if isAdmin() || isAgent() || isTenantOwner(resource.data.tenantId);
      allow create: if isAdmin() || isAgent();
      allow update, delete: if isAdmin();
    }

    match /payments/{paymentId} {
      allow read: if isAdmin() || isTenantOwner(resource.data.tenantId);
      allow create: if isAdmin() || isAgent();
      allow update, delete: if isAdmin();
    }

    match /tasks/{taskId} {
      allow read, write: if isAdmin() || isAgent();
    }

    match /logs/{logId} {
      allow read, write: if isAdmin();
    }

    match /landlords/{landlordId} {
      allow read: if isAdmin() || isAgent();
      allow write: if isAdmin();
    }
    
    match /propertyOwners/{ownerId} {
        allow read: if isAdmin() || isAgent();
        allow write: if isAdmin();
    }
    
    match /communications/{commId} {
        allow read, write: if isAdmin() || isAgent();
    }

    match /properties/{propertyId} {
      allow read: if isAdmin() || isAgent();
      allow write: if isAdmin();
    }
  }
}
